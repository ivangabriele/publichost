{
  "name": "publichost-server",
  "description": "Make your localhost public. Tunnel HTTP and WebSocket traffic to your local machine from any domain name.",
  "license": "AGPL-3.0",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "rm -fr ./dist && tsup ./src/index.ts --format esm --sourcemap",
    "dev": "node --loader ts-node/esm --watch ./src/index.ts",
    "start": "node ./dist/index.js",
    "test:type": "tsc"
  },
  "dependencies": {
    "@faker-js/faker": "8.4.1",
    "bhala": "3.0.4",
    "koa": "2.15.3",
    "koa-router": "12.0.1",
    "ws": "8.18.0"
  },
  "optionalDependencies": {
    "bufferutil": "4.0.8"
  },
  "devDependencies": {
    "@types/node": "22.3.0",
    "@types/ws": "8.5.12",
    "publichost-common": "workspace:*"
  }
}
